{
  "manifest_version": 3,
  "name": "CarbonVoid",
  "version": "1.0",
  "description": "Counts unread Gmail emails to estimate carbon footprint and monitors digital activities.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.netflix.com/*",
    "https://*.zoom.us/*",
    "https://*.teams.microsoft.com/*",
    "https://meet.google.com/*",
    "https://*.webex.com/*",
    "http://localhost:3000/*",
    "http://localhost:5173/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open CarbonVoid Sidepanel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://*.netflix.com/*",
        "https://*.zoom.us/*",
        "https://*.teams.microsoft.com/*",
        "https://meet.google.com/*",
        "https://*.webex.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}